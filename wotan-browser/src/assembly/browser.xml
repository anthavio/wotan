<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>browser</id>
	<formats>
		<format>zip</format>
		<format>dir</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>net.anthavio.wotan:*</include>
			</includes>
			<excludes>
				<exclude>*:war:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/ext</outputDirectory>
			<excludes>
				<exclude>net.anthavio.wotan:*</exclude>
				<exclude>*:war:*</exclude>
			</excludes>
		</dependencySet>
		<!-- jetty is in provided scope -->
		<dependencySet>
			<outputDirectory>lib/ext</outputDirectory>
			<excludes>
				<exclude>net.anthavio.wotan:*</exclude>
				<exclude>*:war:*</exclude>
			</excludes>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<outputDirectory>lib</outputDirectory>
			<directory>target</directory>
			<includes>
				<include>*classes.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory></outputDirectory>
			<directory>src/assembly/browser</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>webapps/wotan</outputDirectory>
			<directory>src/main/webapp</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>etc</outputDirectory>
			<directory>src/main/resources</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>